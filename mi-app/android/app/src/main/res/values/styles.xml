<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme con Modo "Caja Segura" -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:background">@null</item>
        <!-- Modo "Caja Segura": colores SÓLIDOS para las barras del sistema -->
        <item name="android:statusBarColor">#0f172a</item>
        <item name="android:navigationBarColor">#0f172a</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- Heredamos de AppTheme para mantener consistencia -->
    <style name="AppTheme.NoActionBar" parent="AppTheme" />

    <style name="AppTheme.NoActionBarLaunch" parent="Theme.SplashScreen">
        <item name="android:background">@drawable/splash</item>
        <!-- Colores de barras durante el splash también -->
        <item name="android:statusBarColor">#0f172a</item>
        <item name="android:navigationBarColor">#0f172a</item>
    </style>
</resources>
